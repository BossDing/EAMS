<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dimple.maintenance.mapper.EamsPolicyMapper">

    <resultMap type="com.dimple.maintenance.domain.Policy" id="EamsPolicyMap">
        <result property="polId" column="pol_id" jdbcType="LONG INTEGER"/>
        <result property="polName" column="pol_name" jdbcType="VARCHAR"/>
        <result property="ancestors" column="ancestors" jdbcType="VARCHAR"/>
        <result property="parentId" column="parent_id" jdbcType="LONG INTEGER"/>
        <result property="orderNum" column="order_num" jdbcType="INTEGER"/>
        <result property="score" column="score" jdbcType="NUMERIC"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="selectPolicyById" resultMap="EamsPolicyMap">
        select
          pol_id, pol_name, ancestors, parent_id, order_num, score, remark, create_by, create_time, update_by, update_time
        from eams.eams_policy
        where pol_id = #{polId}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="selectPolicyList" resultMap="EamsPolicyMap">
        select
        pol_id, pol_name, ancestors, parent_id, order_num, score, remark, create_by, create_time, update_by, update_time
        from eams.eams_policy
        <where>
            <if test="polId != null">
                and pol_id = #{polId}
            </if>
            <if test="polName != null and polName != ''">
                and pol_name = #{polName}
            </if>
            <if test="ancestors != null and ancestors != ''">
                and ancestors = #{ancestors}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
            <if test="orderNum != null">
                and order_num = #{orderNum}
            </if>
            <if test="score != null">
                and score = #{score}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
            <if test="createBy != null and createBy != ''">
                and create_by = #{createBy}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateBy != null and updateBy != ''">
                and update_by = #{updateBy}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertPolicy" keyProperty="polId" useGeneratedKeys="true">
        insert into eams.eams_policy(pol_name, ancestors, parent_id, order_num, score, remark, create_by, create_time, update_by, update_time)
        values (#{polName}, #{ancestors}, #{parentId}, #{orderNum}, #{score}, #{remark}, #{createBy}, #{createTime}, #{updateBy}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="updatePolicy">
        update eams.eams_policy
        <set>
            <if test="polName != null and polName != ''">
                pol_name = #{polName},
            </if>
            <if test="ancestors != null and ancestors != ''">
                ancestors = #{ancestors},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="orderNum != null">
                order_num = #{orderNum},
            </if>
            <if test="score != null">
                score = #{score},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="createBy != null and createBy != ''">
                create_by = #{createBy},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where pol_id = #{polId}
    </update>

    <!--通过主键删除-->
    <delete id="deletePolicyById">
        delete from eams.eams_policy where pol_id = #{polId}
    </delete>

    <delete id="deletePolicyByIds">
        delete from eams_policy where pol_id in
        <foreach collection="array" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

</mapper>