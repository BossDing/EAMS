<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dimple.maintenance.mapper.EamsRuleMapper">

    <resultMap type="com.dimple.maintenance.domain.Rule" id="EamsRuleMap">
        <result property="ruleId" column="rule_id" jdbcType="LONG INTEGER"/>
        <result property="openTime" column="open_time" jdbcType="TIMESTAMP"/>
        <result property="closeTime" column="close_time" jdbcType="TIMESTAMP"/>
        <result property="polId" column="pol_id" jdbcType="INTEGER"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="selectRuleById" resultMap="EamsRuleMap">
        select
          rule_id, open_time, close_time, pol_id, create_by, create_time, update_by, update_time
        from eams.eams_rule
        where rule_id = #{ruleId}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectRuleList" resultMap="EamsRuleMap">
        select
        rule_id, open_time, close_time, pol_id, create_by, create_time, update_by, update_time
        from eams.eams_rule
        <where>
            <if test="ruleId != null">
                and rule_id = #{ruleId}
            </if>
            <if test="openTime != null">
                and open_time = #{openTime}
            </if>
            <if test="closeTime != null">
                and close_time = #{closeTime}
            </if>
            <if test="polId != null">
                and pol_id = #{polId}
            </if>
            <if test="createBy != null and createBy != ''">
                and create_by = #{createBy}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateBy != null and updateBy != ''">
                and update_by = #{updateBy}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertRule" keyProperty="ruleId" useGeneratedKeys="true">
        insert into eams.eams_rule(open_time, close_time, pol_id, create_by, create_time, update_by, update_time)
        values (#{openTime}, #{closeTime}, #{polId}, #{createBy}, #{createTime}, #{updateBy}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateRule">
        update eams.eams_rule
        <set>
            <if test="openTime != null">
                open_time = #{openTime},
            </if>
            <if test="closeTime != null">
                close_time = #{closeTime},
            </if>
            <if test="polId != null">
                pol_id = #{polId},
            </if>
            <if test="createBy != null and createBy != ''">
                create_by = #{createBy},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where rule_id = #{ruleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteRuleById">
        delete from eams.eams_rule where rule_id = #{ruleId}
    </delete>

    <delete id="deleteRuleByIds">
        delete from eams_rule where rule_id in
        <foreach collection="array" close=")" open="(" separator="," item="id">
            #{id}
        </foreach>
    </delete>

</mapper>