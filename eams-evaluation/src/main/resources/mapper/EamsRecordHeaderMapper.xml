<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dimple.evaluation.mapper.EamsRecordHeaderMapper">

    <resultMap type="com.dimple.evaluation.domain.RecordHeader" id="EamsRecordHeaderMap">
        <result property="recHeaderId" column="rec_header_id"/>
        <result property="stuId" column="stu_id"/>
        <result property="score" column="score"/>
        <result property="emailSend" column="email_send"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="creat_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="ruleId" column="rule_id"/>
        <result property="ruleName" column="rule_name"/>
    </resultMap>

    <!--查询单个-->
    <select id="selectRecordHeaderById" resultMap="EamsRecordHeaderMap">
        select
          rec_header_id, stu_id, score, email_send, create_by, create_time, update_by, update_time
        from eams_record_header
        where rec_header_id = #{recHeaderId}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectRecordHeaderList" resultMap="EamsRecordHeaderMap">
        select r.rec_header_id,
        r.stu_id,
        r.score,
        r.email_send,
        r.create_by,
        r.create_time,
        s.stu_name,
        s.stu_num
        from eams_record_header r
        left join eams_student s
        on r.stu_id = s.stu_id
        left join eams_rule ru
        on ru.rule_id = r.rule_id
        <where>
            <if test="emailSend != null and emailSend != ''">
                and r.email_send = #{emailSend}
            </if>
            <!--设置规则编号查询-->
            <if test="ruleId != null and ruleId != ''">
                and r.rule_id = #{ruleId}
            </if>
            <!--设置学号查询-->
            <if test="stuNum != null and stuNum != ''">
                and s.stu_num = #{stuNum}
            </if>
            <!--设置姓名查询-->
            <if test="stuName!=null and stuName!=''">
                and s.stu_name=#{stuName}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d');
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertRecordHeader" keyProperty="recHeaderId" useGeneratedKeys="true">
        insert into eams_record_header(stu_id, score, email_send, create_by, create_time, update_by, update_time)
        values (#{stuId}, #{score}, #{emailSend}, #{createBy}, #{createTime}, #{updateBy}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateRecordHeader">
        update eams_record_header
        <set>
            <if test="stuId != null">
                stu_id = #{stuId},
            </if>
            <if test="score != null">
                score = #{score},
            </if>
            <if test="emailSend != null and emailSend != ''">
                email_send = #{emailSend},
            </if>
            <if test="createBy != null and createBy != ''">
                create_by = #{createBy},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where rec_header_id = #{recHeaderId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteRecordHeaderById">
        delete from eams_record_header where rec_header_id = #{recHeaderId}
    </delete>
    <delete id="deleteRecordHeaderByIds">
        delete from eams_record_header where rec_header_id in
        <foreach collection="array" close=")" open="(" separator="," item="id">
            #{id}
        </foreach>
    </delete>

</mapper>